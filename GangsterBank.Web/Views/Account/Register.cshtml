@using System.Text.RegularExpressions
@model GangsterBank.Models.RegisterViewModel


<div class="row">
    <div class="col-md-offset-3 col-md-6">
        @using (this.Html.BeginForm("Register", "Account", null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @Html.EditorForModel()
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-warning right" />
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
